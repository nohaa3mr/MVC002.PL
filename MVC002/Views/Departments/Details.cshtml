@using MVC002.DAL.Models
@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers

@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="form-group" >
    <label class="col-form-label" asp-for="Code"></label>
    <input readonly class="form-control" asp-for="Code" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input readonly class="form-control" asp-for="Name" />
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="DateOfCreation"></label>
    <input readonly class="form-control" asp-for="DateOfCreation" />
</div>
<a asp-action="Edit" asp-controller="Departments" asp-route-id="@Model.Id" class="btn btn-secondary"> Edit</a>
<a asp-action="DeptHome" asp-controller="Departments" asp-route-id="@Model.Id" class="btn btn-light"> Back To List</a>


@using MVC002.DAL.Models
@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
 }
 @if(TempData["Message"] is not null)
{
    <div class="alert alert-success mt-5">
        @TempData["Message"];
    </div>
} 


<div class="alert alert-success">
    @ViewBag.Message <!-- it will override on ViewData and ViewBag Because its from Dynamic type -->
</div>
<h1>All Departments</h1>
<br />
<br />
<a asp-controller="Departments" asp-action="Create" class="btn btn-primary">Create Department</a>
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th>Edit</th>
                <th>Delete</th>
                <th>Details</th>
            </tr> 
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                   <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>

                <partial name="_ButtonsPartialView" model="@department.Id" />



                </tr>
            }
        </tbody>


    </table>
}
else
{
    <div class="alert alert-danger">

        <h4>There are no Departments</h4>
    </div>
}


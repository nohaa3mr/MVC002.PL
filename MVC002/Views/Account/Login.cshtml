@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login</h1>


<div asp-validation-summary="All" class="text-danger"> </div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			
			<input  type="text" asp-for="Email" class="alert-danger" placeholder="Email"/>
			<span asp-validation-for="Email" ></span>
			<br />
			<div class="password-container">
				<input type="password" id="password" class="password-input" asp-for="Password" placeholder="Password"/>
	           <span asp-validation-for="Password"></span>
			</div>

			
			<br />


			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="LogIn"/>
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Register </a></p>
		   <a asp-action="ForgetPassword">       Forget Password? </a>
	</div>
</div>
@section ValidationScriptSection
{
	<partial name="_ValidationScriptsPartial" />

}
@using MVC002.DAL.Models
@model IEnumerable<Employee>
@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Employees";
}@* 
@if(TempData["Message"] is not null)
{
    <div class="alert alert-danger">
        @TempData["Message"]
    </div>
}
<div class= "alert alert-danger">
    @ViewBag.Message
</div> *@

@* <div class="alert alert-danger">
    @ViewData["Message"]
</div> *@
<h1>All Employees</h1>
<br />
<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add New Employee</a>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Age)</th>
                <th>@Html.DisplayNameFor(e => e.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(e => e.Email)</th>
                <th>@Html.DisplayNameFor(e => e.Address)</th>
                <th>@Html.DisplayNameFor(e => e.Salary)</th>
                <th>@Html.DisplayNameFor(e => e.Department)</th>
                <th>@Html.DisplayNameFor(e => e.HireDate)</th>
                <th>@Html.DisplayNameFor(e => e.IsActive)</th>




                <th>Edit</th>
                <th>Delete</th>
                <th>Details</th>
            </tr> 
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@Html.DisplayFor(e=> employee.Email)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(e => employee.Salary)</td>
                    <td>@Html.DisplayFor(e => employee.Department.Name)</td>
                    <td>@employee.HireDate</td>
                    <td>
                        @if(employee.IsActive == true)
                        {
                            <i class="fa-solid fa-circle " style="color :aquamarine"></i>
                        }
                        else
                        {
                      <i class="fa-solid fa-circle " style="color :red"></i>
                        }
                    </td>
                  
                
                    <partial name ="_ButtonsPartialView" model="@employee.Id" />

                </tr>
            }
        </tbody>


    </table>
}
else
{
    <div class="alert alert-danger">

        <h4>There Are No Employees.</h4>
    </div>
}
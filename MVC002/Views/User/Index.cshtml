@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  
<h1 >All Users</h1>
<br />
<form class="row offset-2" asp-action="Index">
    <div col-8>


        <input class="form-control" type="text" name="SearchValue" placeholder="User Name" />
    </div>

    <div col-4>
        <input type="submit" class="btn btn-info" value="Search" />

    </div>
</form>
<a asp-action="Create" class=" btn btn-secondary"> Add New User</a>
<br />
@if(Model.Count() > 0)
{<table class="table table-striped table-hover table-bordered mt-5">
   <thead>
       <tr>
                <td> @Html.DisplayNameFor( u=>u.Id )</td>
                <td> @Html.DisplayNameFor(u => u.FName)</td>
                <td> @Html.DisplayNameFor(u => u.LName)</td>
                <td> @Html.DisplayNameFor(u => u.PhoneNumber)</td>
                <td> @Html.DisplayNameFor(u => u.Email)</td>
                <td> @Html.DisplayNameFor(u => u.Roles)</td>
                <td>Edit</td>
                <td>Delete</td>
                <td>Details</td>


       </tr>
   </thead>
   <tbody>
            @foreach(var User in Model)
            {
                <tr>
                    <td> @User.Id </td>
                    <td> @User.FName </td>
                    <td> @User.LName </td>
                    <td> @User.PhoneNumber </td>
                    <td> @User.Email </td>
                    <td> @string.Join(",", User.Roles) </td>
                    <partial name="_ButtonsPartialView"  model="@User.Id"/>

                </tr>
            }
        </tbody>
</table>
}
else
{
    <h1>There Are No Users.</h1>
}
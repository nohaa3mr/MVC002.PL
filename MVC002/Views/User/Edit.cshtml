@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit @Model.FName</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label class="col-form-label" asp-for="FName">
            <input  class="form-control" asp-for="FName" />
        </label>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="LName">
            <input  class="form-control" asp-for="LName" />
        </label>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber">
            <input  class="form-control" asp-for="PhoneNumber" />
        </label>
    </div>
    <input type="submit" value="Save" class="btn btn-dark" />
    <a asp-action="Index" class="btn btn-primary"> Back </a>
</form>
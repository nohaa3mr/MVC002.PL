@model UserViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> View @Model.FName Details</h1>
<div class="form-group">
   <label class="col-form-label" asp-for="Id">
    <input readonly class="form-control" asp-for="Id" />
   </label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="FName">
        <input readonly class="form-control" asp-for="FName" />
    </label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="LName">
        <input readonly class="form-control" asp-for="LName" />
    </label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber">
        <input readonly class="form-control" asp-for="PhoneNumber" />
    </label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email">
        <input readonly class="form-control" asp-for="Email" />
    </label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Roles">
        <input readonly class="form-control " asp-for="Roles" />
    </label>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
<a asp-action="Index" class="btn btn-dark" >Back</a>